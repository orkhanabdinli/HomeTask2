@model List<Slider>
@{
    int counter = 0;
}

<div class="container-fluid">
    <div class="row aling-items-center justify-content-between">
        <h2>Sliders:</h2>
        <a asp-action="create" asp-controller="slider" class="btn btn-primary">Create</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title 1</th>
                <th scope="col">Title 2</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.Title1</td>
                    <td>@item.Title2</td>
                    <td>
                        <img style="width:180px"src="~/assets/img/slide/@item.ImageUrl"/>
                    </td>
                    <td>
                        <a asp-action="update" asp-controller="slider" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                        <a asp-action="delete" asp-controller="slider" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>