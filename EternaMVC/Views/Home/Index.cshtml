@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- ======= Hero Section ======= -->
<section id="hero">
    <div class="hero-container">
        <div id="heroCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">

            <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

            <div class="carousel-inner" role="listbox">

                <!-- Slide 1 -->
                @foreach (Slider slider in Model.Sliders)
                {
                    <div class="carousel-item active" style="background-image: url(../assets/img/slide/@slider.ImageUrl)">
                        <div class="carousel-container">
                            <div class="carousel-content">
                                <h2 class="animate__animated animate__fadeInDown">@slider.Title1 <span>@slider.Title2</span></h2>
                                <p class="animate__animated animate__fadeInUp">@slider.Desc</p>
                                <a href="@slider.RedirectUrl" class="btn-get-started animate__animated animate__fadeInUp">Read More</a>
                            </div>
                        </div>
                    </div>
                }

               

            </div>

            <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
            </a>

            <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
            </a>

        </div>
    </div>
</section><!-- End Hero -->

<main id="main">

    <!-- ======= Featured Section ======= -->
    <section id="featured" class="featured">
        <div class="container">

            <div class="row">
                @foreach (Feature feature in Model.Features)
                {
                    <div class="col-lg-4">
                        <div class="icon-box">
                            <i class="bi @feature.IconClass"></i>
                            <h3><a href="@feature.RedirectUrl">@feature.Title</a></h3>
                            <p>@feature.Desc</p>
                        </div>
                    </div>
                }

            </div>

        </div>
    </section><!-- End Featured Section -->
    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container">
            <div class="row">
            @foreach (About about in Model.Abouts)
            {
                    <div class="col-lg-6">
                        <img src="~/assets/img/@about.Picture" class="img-fluid" alt="">
                    </div>
                    <div class="col-lg-6 pt-4 pt-lg-0 content">
                        <h3>@about.Title</h3>
                        <p class="fst-italic">
                            @about.Description
                        </p>
                        <ul>
                            <li><i class="bi bi-check-circle"></i> @about.List1</li>
                            <li><i class="bi bi-check-circle"></i> @about.List2</li>
                            <li><i class="bi bi-check-circle"></i> @about.List3</li>
                        </ul>
                        <p>
                            @about.Description2
                        </p>
                    </div>
            }
            </div>
        </div>
    </section><!-- End About Section -->
    <!-- ======= Services Section ======= -->
    <section id="services" class="services">
        <div class="container">

            <div class="row">
                @foreach (Service service in Model.Services)
                {
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="icon-box">
                        <div class="icon"><i class="bx @service.IconName"></i></div>
                            <h4><a href="">@service.Title</a></h4>
                            <p>@service.Description</p>
                    </div>
                </div>
                }
            </div>

        </div>
    </section><!-- End Services Section -->
    <!-- ======= Clients Section ======= -->
    <section id="clients" class="clients">
        <div class="container">

            <div class="section-title">
                <h2>@ViewBag.Clientslabel</h2>
                <p>@ViewBag.ClientsDesc</p>
            </div>

            <div class="clients-slider swiper">
                <div class="swiper-wrapper align-items-center">
                    @foreach (Clients client in Model.Clients)
                    {
                    <div class="swiper-slide"><img src="~/assets/img/clients/@client.Picture" class="img-fluid" alt=""></div>
                    }
                </div>
                <div class="swiper-pagination"></div>
            </div>

        </div>
    </section><!-- End Clients Section -->

</main><!-- End #main -->